@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ===== Verifica autenticazione tramite localStorage =====
            const checkAuthentication = () => {
                const userData = localStorage.getItem('userData');
                const utente = localStorage.getItem('utente');

                const loginButton = document.getElementById('loginButton');
                const profileButton = document.getElementById('profileButton');

                if (userData || utente) {
                    // Utente autenticato
                    if (loginButton) loginButton.style.display = 'none';
                    if (profileButton) profileButton.style.display = 'inline-block';
                } else {
                    // Utente non autenticato
                    if (loginButton) loginButton.style.display = 'inline-block';
                    if (profileButton) profileButton.style.display = 'none';
                }
            };

            // Controlla autenticazione all'avvio
            checkAuthentication();

            // Controlla anche se lo stato di autenticazione cambia
            window.addEventListener('storage', function(e) {
                if (e.key === 'userData' || e.key === 'utente') {
                    checkAuthentication();
                }
            });

            // ===== Caricamento dell'Audio =====
            const audioTickTock = new Audio('/media/clock-ticking.mp3'); // Assicurati di avere questo file
            audioTickTock.loop = true;
            audioTickTock.volume = 0.5;

            const playButton = document.getElementById('playTickTock');
            if (playButton) {
                playButton.addEventListener('click', function() {
                    if (audioTickTock.paused) {
                        audioTickTock.play();
                        this.innerHTML = '<i class="fas fa-pause"></i> Pausa';
                    } else {
                        audioTickTock.pause();
                        this.innerHTML = '<i class="fas fa-play"></i> Ascolta il suono dell\'eccellenza';
                    }
                });
            }

            // ===== Carousel Navigation =====
            const carousel = document.querySelector('.watch-carousel');
            const prevButton = document.querySelector('.carousel-control.prev');
            const nextButton = document.querySelector('.carousel-control.next');
            const indicators = document.querySelectorAll('.indicator');

            if (carousel && prevButton && nextButton) {
                let scrollAmount = 0;
                const cardWidth = 260 + 20; // Card width + gap
                const maxScroll = carousel.scrollWidth - carousel.clientWidth;

                // Click events for navigation buttons
                prevButton.addEventListener('click', function() {
                    scrollAmount -= cardWidth * 2;
                    if (scrollAmount < 0) scrollAmount = 0;
                    carousel.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                    updateIndicators();
                });

                nextButton.addEventListener('click', function() {
                    scrollAmount += cardWidth * 2;
                    if (scrollAmount > maxScroll) scrollAmount = maxScroll;
                    carousel.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                    updateIndicators();
                });

                // Update indicators based on scroll position
                function updateIndicators() {
                    const scrollPercentage = scrollAmount / maxScroll;
                    indicators.forEach((indicator, index) => {
                        if (scrollPercentage >= index / (indicators.length - 1) - 0.1 &&
                            scrollPercentage <= (index + 1) / (indicators.length - 1) + 0.1) {
                            indicator.classList.add('active');
                        } else {
                            indicator.classList.remove('active');
                        }
                    });
                }

                // Click event for indicators
                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', function() {
                        scrollAmount = (maxScroll * index) / (indicators.length - 1);
                        carousel.scrollTo({ left: scrollAmount, behavior: 'smooth' });
                        indicators.forEach(ind => ind.classList.remove('active'));
                        this.classList.add('active');
                    });
                });

                // Scroll event to update indicators
                carousel.addEventListener('scroll', function() {
                    scrollAmount = carousel.scrollLeft;
                    updateIndicators();
                });
            }

            // ===== Reveal animations on scroll =====
            const revealElements = document.querySelectorAll('.reveal-title, .reveal-card, .reveal-left, .reveal-right');

            function revealOnScroll() {
                for (let i = 0; i < revealElements.length; i++) {
                    const windowHeight = window.innerHeight;
                    const elementTop = revealElements[i].getBoundingClientRect().top;
                    const elementVisible = 150;

                    // Add delay for card elements if they have a delay attribute
                    const delay = revealElements[i].getAttribute('data-delay');

                    if (elementTop < windowHeight - elementVisible) {
                        if (delay) {
                            setTimeout(() => {
                                revealElements[i].classList.add("active");
                            }, delay);
                        } else {
                            revealElements[i].classList.add("active");
                        }
                    }
                }
            }

            window.addEventListener("scroll", revealOnScroll);

            // Call reveal function on page load
            revealOnScroll();

            // ===== Counter Animation =====
            const counters = document.querySelectorAll('.counter-number');
            let counted = false;

            function startCounters() {
                if (counted) return;

                counters.forEach(counter => {
                    const target = +counter.getAttribute('data-count');
                    let count = 0;
                    const duration = 2000; // ms
                    const increment = target / (duration / 16); // 16ms is roughly 60fps

                    const updateCounter = () => {
                        count += increment;

                        if (count < target) {
                            counter.innerText = Math.floor(count).toLocaleString();
                            requestAnimationFrame(updateCounter);
                        } else {
                            counter.innerText = target.toLocaleString();
                        }
                    };

                    updateCounter();
                });

                counted = true;
            }

            // Start counters when they come into view
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const counterObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        startCounters();
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            if (counters.length > 0) {
                counterObserver.observe(document.querySelector('.members-counter'));
            }

            // ===== Brand Cards Click Events =====
            const brandCards = document.querySelectorAll('.brand-card');

                        const brandWebsites = {
                'rolex': 'https://www.rolex.com',
                'patek': 'https://www.patek.com',
                'ap': 'https://www.audemarspiguet.com',
                'omega': 'https://www.omegawatches.com',
                'cartier': 'https://www.cartier.com',
                'iwc': 'https://www.iwc.com'
            };

                        brandCards.forEach(card => {
                card.addEventListener('click', function() {
                    const brand = this.getAttribute('data-brand');
                    // Aggiungi un effetto di ripple al click
                    const ripple = document.createElement('div');
                    ripple.className = 'ripple-effect';
                    this.appendChild(ripple);

                    // Ottieni l'URL del sito ufficiale del brand
                    const brandUrl = brandWebsites[brand] || `/Homepage?marca=${brand}`;

                    setTimeout(() => {
                        ripple.remove();
                        // Apri il sito ufficiale in una nuova scheda
                        window.open(brandUrl, '_blank');
                    }, 300);
                });
            });

            // ===== Parallax Effect =====
            const parallaxSection = document.querySelector('.parallax-section');

            if (parallaxSection) {
                window.addEventListener('scroll', function() {
                    const scrollY = window.pageYOffset;
                    const sectionTop = parallaxSection.offsetTop;
                    const distance = scrollY - sectionTop;

                    // Apply parallax only when section is in view
                    if (scrollY > sectionTop - window.innerHeight && scrollY < sectionTop + parallaxSection.offsetHeight) {
                        parallaxSection.style.backgroundPositionY = `calc(50% + ${distance * 0.5}px)`;
                    }
                });
            }

            // ===== Initial animations for a wow effect =====
            setTimeout(() => {
                document.querySelector('.hero-content h1').classList.add('animated-title');
                document.querySelector('.hero-content p').classList.add('fade-in-up');

                const heroButtons = document.querySelectorAll('.hero-btn');
                heroButtons.forEach((btn, index) => {
                    setTimeout(() => {
                        btn.style.opacity = '1';
                        btn.style.transform = 'translateY(0)';
                    }, 500 + (index * 200));
                });
            }, 300);
        });
    </script>
