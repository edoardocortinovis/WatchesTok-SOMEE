@section Styles {
    <style>
        /* Import Font Awesome (assicurati di includere il link nel head del documento) */
        @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css');
        
        /* Import Google Fonts */
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');
        
        /* Stili generali */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            overflow-x: hidden;
        }

        :root {
            --primary-color: #0d6efd;
            --secondary-color: #0dcaf0;
            --accent-color: #ff4081;
            --dark-color: #212529;
            --light-color: #f8f9fa;
        }

        .section-title {
            font-weight: 700;
            position: relative;
            padding-bottom: 15px;
            margin-bottom: 30px;
        }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        }

        /* Modifica per ridurre i margini laterali */
        .container, .container-fluid, .container-lg, .container-md, .container-sm, .container-xl, .container-xxl {
            width: 95%;
            max-width: 95%;
            margin-left: auto;
            margin-right: auto;
        }

        /* Hero Section Enhancements */
        .hero-section {
            position: relative;
            width: 99.5vw;
            left: 50%;
            right: 50%;
            margin-left: -50vw;
            margin-right: -50vw;
            height: 85vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            padding: 0;
        }

        .hero-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            margin-left: 10px;
            margin-right: -10px;
            height: 100%;
            object-fit: cover;
            z-index: -2;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8));
            z-index: -1;
        }

        .hero-content {
            max-width: 800px;
            padding: 0 20px;
            position: relative;
            z-index: 1;
        }

        /* Floating watches animation */
        .floating-watch {
            position: absolute;
            z-index: 0;
            opacity: 0.6;
            width: 150px;
            height: 150px;
        }

        .floating-watch img {
            width: 100%;
            height: auto;
        }

        .floating-watch.left {
            left: 10%;
            animation: floatLeft 6s ease-in-out infinite;
        }

        .floating-watch.right {
            right: 10%;
            animation: floatRight 8s ease-in-out infinite;
        }

        @@keyframes floatLeft {
            0%, 100% { transform: translateY(0) rotate(-5deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        @@keyframes floatRight {
            0%, 100% { transform: translateY(-20px) rotate(5deg); }
            50% { transform: translateY(0) rotate(-5deg); }
        }

        /* Hero buttons with animation */
        .hero-btn {
            font-weight: 500;
            border-radius: 30px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .hero-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.2);
        }

        .pulse-btn {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7); }
            70% { box-shadow: 0 0 0 10px rgba(255, 255, 255, 0); }
            100% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
        }

        .glow-btn {
            position: relative;
            z-index: 1;
            overflow: hidden;
        }

        .glow-btn:after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255,255,255,0.2);
            transform: rotate(30deg);
            transition: all 0.6s ease;
            z-index: -1;
        }

        .glow-btn:hover:after {
            transform: rotate(30deg) translate(80%, -10%);
        }

        /* Animated Title */
        .animated-title {
            animation: glow 2s ease-in-out infinite alternate;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 10px rgba(13, 110, 253, 0.3);
        }

        @@keyframes glow {
            from { text-shadow: 0 0 5px rgba(13, 110, 253, 0.3); }
            to { text-shadow: 0 0 15px rgba(13, 110, 253, 0.8); }
        }

        /* Fade in up animation */
        .fade-in-up {
            animation: fadeInUp 1s ease forwards;
            opacity: 0;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Scroll Down Indicator */
        .scroll-indicator {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            animation: fadeInDown 1.5s ease-in-out 1s forwards;
            opacity: 0;
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translate(-50%, -20px);
            }
            to {
                opacity: 1;
                transform: translate(-50%, 0);
            }
        }

        .mouse {
            width: 26px;
            height: 40px;
            border: 2px solid white;
            border-radius: 20px;
            position: relative;
            margin: 0 auto 10px;
        }

        .wheel {
            height: 6px;
            width: 2px;
            background-color: white;
            position: absolute;
            top: 8px;
            left: 50%;
            transform: translateX(-50%);
            animation: scroll 1.5s infinite;
            opacity: 0.75;
        }

        @@keyframes scroll {
            0% { transform: translateX(-50%) translateY(0); opacity: 1; }
            80% { transform: translateX(-50%) translateY(10px); opacity: 0; }
            100% { transform: translateX(-50%) translateY(0); opacity: 0; }
        }

        .arrow span {
