                    <div class="sound-controls">
                        <button id="playTickTock" class="btn btn-outline-dark">
                            <i class="fas fa-play"></i> Ascolta il suono dell'eccellenza
                        </button>
                    </div>
                    <!-- Audio nascosto -->
                    <audio id="tickTockSound" src="https://edocorti.altervista.org/img/ticktock.mp3"></audio>
                </div>
                <div class="col-md-6 text-center reveal-right">
                    <div class="ticking-watch">
                        <img src="https://edocorti.altervista.org/img/rainbow.png" alt="Orologio Meccanico" class="img-fluid">
                        <div class="ticking-animation"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script per riprodurre il suono -->
    <script>
    const playButton = document.getElementById("playTickTock");
    const audio = document.getElementById("tickTockSound");
    
    let isPlaying = false;

    playButton.addEventListener("click", function () {
        if (isPlaying) {
            audio.pause();
            audio.currentTime = 0; // Torna all'inizio
            playButton.innerHTML = `<i class="fas fa-play"></i> Ascolta il suono dell'eccellenza`;
        } else {
            audio.currentTime = 0; // Assicura che parta da capo
            audio.play();
            playButton.innerHTML = `<i class="fas fa-stop"></i> Ferma il suono`;
        }
        isPlaying = !isPlaying;
    });
</script>




